# Database (Docker PostgreSQL)
# For Docker: use container name 'nodus_postgres'
# For local dev: use 'localhost'
DATABASE_URL=postgresql://nodus_user:YOUR_SECURE_PASSWORD@nodus_postgres:5432/nodus_db?schema=public

# Server
PORT=3001
NODE_ENV=development

# CORS - Frontend URL
CLIENT_URL=http://localhost:5173

# JWT Authentication - CHANGE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Backblaze B2 Cloud Storage (Optional - leave empty for local storage)
# Get these from Backblaze Dashboard > App Keys
B2_ENDPOINT=s3.us-west-004.backblazeb2.com
B2_BUCKET_NAME=
B2_KEY_ID=
B2_APPLICATION_KEY=

# B2 Public URL (your B2 friendly URL or CDN)
# Example: https://f004.backblazeb2.com/file/your-bucket-name
B2_PUBLIC_URL=

# Docker Backend Port (external port mapping)
BACKEND_PORT=5020
