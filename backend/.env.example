# Database (Docker PostgreSQL)
# For Docker: use container name 'nodus_postgres'
# For local dev: use 'localhost'
DATABASE_URL=postgresql://nodus_user:YOUR_SECURE_PASSWORD@nodus_postgres:5432/nodus_db?schema=public

# Server
PORT=3001
NODE_ENV=development

# CORS - Frontend URL
CLIENT_URL=http://localhost:5173

# JWT Authentication - CHANGE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Cloudflare R2 Cloud Storage (Optional - leave empty for local storage)
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=
R2_BUCKET_NAME=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=

# R2 Public URL (your R2 public bucket URL or custom domain)
# Example: https://images.yourdomain.com or https://pub-xxx.r2.dev
R2_PUBLIC_URL=

# Docker Backend Port (external port mapping)
BACKEND_PORT=5020
