import express from 'express';
import { PrismaClient } from '@prisma/client';
import { authenticate, authorize, canModifyPicture, optionalAuth } from '../middleware/auth.js';
import { upload, handleUploadError } from '../middleware/upload.js';

const router = express.Router();
const prisma = new PrismaClient();

// GET /api/pictures - Get all pictures (public for approved, filtered for authenticated)
router.get('/', optionalAuth, async (req, res) => {
  try {
    const {
      status,
      type,
      categoryId,
      groupId,
      troupeId,
      patrouilleId,
      startDate,
      endDate,
      highlights,
      page = 1,
      limit = 20,
    } = req.query;

    const where = {};

    // Public users can only see approved pictures
    if (!req.user) {
      where.status = 'APPROVED';
    } else {
      // Authenticated users filter based on role
      if (req.user.role === 'CHEF_TROUPE') {
        // Chef troupe sees their own pictures (all statuses) or approved pictures
        if (status) {
          where.status = status;
          where.uploadedById = req.user.id;
        } else {
          where.OR = [
            { uploadedById: req.user.id },
            { status: 'APPROVED' },
          ];
        }
      } else if (req.user.role === 'BRANCHE_ECLAIREURS' || req.user.role === 'ADMIN') {
        // Branche and admin see all pictures
        if (status) where.status = status;
      }
    }

    // Apply filters
    if (type) where.type = type;
    if (categoryId) where.categoryId = parseInt(categoryId);
    if (groupId) where.troupe = { groupId: parseInt(groupId) };
    if (troupeId) where.troupeId = parseInt(troupeId);
    if (patrouilleId) where.patrouilleId = parseInt(patrouilleId);
    if (highlights === 'true') where.isHighlight = true;

    if (startDate || endDate) {
      where.uploadedAt = {};
      if (startDate) where.uploadedAt.gte = new Date(startDate);
      if (endDate) where.uploadedAt.lte = new Date(endDate);
    }

    const skip = (parseInt(page) - 1) * parseInt(limit);

    const [pictures, total] = await Promise.all([
      prisma.pictureSet.findMany({
        where,
        include: {
          uploadedBy: { select: { id: true, name: true } },
          troupe: {
            include: {
              group: {
                include: { district: true },
              },
            },
          },
          patrouille: true,
          category: true,
          subCategory: true,
          tags: true,
          pictures: true,
        },
        orderBy: { uploadedAt: 'desc' },
        skip,
        take: parseInt(limit),
      }),
      prisma.pictureSet.count({ where }),
    ]);

    res.json({
      pictures,
      pagination: {
        total,
        page: parseInt(page),
        limit: parseInt(limit),
        totalPages: Math.ceil(total / parseInt(limit)),
      },
    });
  } catch (error) {
    console.error('Get pictures error:', error);
    res.status(500).json({ error: 'Failed to fetch pictures' });
  }
});

// GET /api/pictures/:id - Get single picture
router.get('/:id', optionalAuth, async (req, res) => {
  try {
    const picture = await prisma.picture.findUnique({
      where: { id: parseInt(req.params.id) },
      include: {
        uploadedBy: { select: { id: true, name: true } },
        troupe: {
          include: {
            group: {
              include: { district: true },
            },
          },
        },
        patrouille: true,
        category: true,
        subCategory: true,
        tags: true,
        approvedBy: { select: { id: true, name: true } },
      },
    });

    if (!picture) {
      return res.status(404).json({ error: 'Picture not found' });
    }

    // Check access permissions
    if (picture.status !== 'APPROVED' && !req.user) {
      return res.status(403).json({ error: 'Picture not publicly available' });
    }

    if (picture.status !== 'APPROVED' && req.user) {
      if (
        req.user.role === 'CHEF_TROUPE' &&
        picture.uploadedById !== req.user.id
      ) {
        return res.status(403).json({ error: 'Access denied' });
      }
    }

    // Increment view count
    await prisma.picture.update({
      where: { id: picture.id },
      data: { viewCount: { increment: 1 } },
    });

    res.json(picture);
  } catch (error) {
    console.error('Get picture error:', error);
    res.status(500).json({ error: 'Failed to fetch picture' });
  }
});

// POST /api/pictures - Upload picture (chef troupe only)
router.post(
  '/',
  authenticate,
  authorize('CHEF_TROUPE'),
  upload.single('picture'),
  handleUploadError,
  async (req, res) => {
    try {
      if (!req.file) {
        return res.status(400).json({ error: 'No file uploaded' });
      }

      const { title, description, type, patrouilleId } = req.body;

      if (!title || !type) {
        return res.status(400).json({ error: 'Title and type are required' });
      }

      if (!['INSTALLATION_PHOTO', 'SCHEMATIC'].includes(type)) {
        return res.status(400).json({ error: 'Invalid picture type' });
      }

      // Verify patrouille belongs to user's troupe
      if (patrouilleId) {
        const patrouille = await prisma.patrouille.findUnique({
          where: { id: parseInt(patrouilleId) },
        });

        if (!patrouille || patrouille.troupeId !== req.user.troupeId) {
          return res.status(400).json({
            error: 'Invalid patrouille or patrouille does not belong to your troupe',
          });
        }
      }

      const picture = await prisma.picture.create({
        data: {
          title,
          description,
          type,
          filePath: req.file.path,
          uploadedById: req.user.id,
          troupeId: req.user.troupeId,
          patrouilleId: patrouilleId ? parseInt(patrouilleId) : null,
        },
        include: {
          uploadedBy: { select: { id: true, name: true } },
          troupe: true,
          patrouille: true,
        },
      });

      res.status(201).json({
        message: 'Picture uploaded successfully',
        picture,
      });
    } catch (error) {
      console.error('Upload picture error:', error);
      res.status(500).json({ error: 'Failed to upload picture' });
    }
  }
);

// PUT /api/pictures/:id/classify - Classify picture (owner or branche)
router.put('/:id/classify', authenticate, canModifyPicture, async (req, res) => {
  try {
    const { categoryId, subCategoryId, description, location, latitude, longitude, tags } = req.body;

    const updateData = {
      status: 'CLASSIFIED',
      classifiedById: req.user.id,
      classifiedAt: new Date(),
    };

    if (categoryId) updateData.categoryId = parseInt(categoryId);
    if (subCategoryId) updateData.subCategoryId = parseInt(subCategoryId);
    if (description !== undefined) updateData.description = description;
    if (location !== undefined) updateData.location = location;
    if (latitude !== undefined) updateData.latitude = parseFloat(latitude);
    if (longitude !== undefined) updateData.longitude = parseFloat(longitude);

    const picture = await prisma.picture.update({
      where: { id: parseInt(req.params.id) },
      data: updateData,
      include: {
        category: true,
        subCategory: true,
        tags: true,
      },
    });

    res.json({
      message: 'Picture classified successfully',
      picture,
    });
  } catch (error) {
    console.error('Classify picture error:', error);
    res.status(500).json({ error: 'Failed to classify picture' });
  }
});

// POST /api/pictures/:id/approve - Approve picture (branche only)
router.post('/:id/approve', authenticate, authorize('BRANCHE_ECLAIREURS', 'ADMIN'), async (req, res) => {
  try {
    const { isHighlight } = req.body;

    const picture = await prisma.picture.update({
      where: { id: parseInt(req.params.id) },
      data: {
        status: 'APPROVED',
        approvedById: req.user.id,
        approvedAt: new Date(),
        isHighlight: isHighlight || false,
      },
      include: {
        approvedBy: { select: { id: true, name: true } },
      },
    });

    res.json({
      message: 'Picture approved successfully',
      picture,
    });
  } catch (error) {
    console.error('Approve picture error:', error);
    res.status(500).json({ error: 'Failed to approve picture' });
  }
});

// POST /api/pictures/:id/reject - Reject picture (branche only)
router.post('/:id/reject', authenticate, authorize('BRANCHE_ECLAIREURS', 'ADMIN'), async (req, res) => {
  try {
    const { rejectionReason } = req.body;

    if (!rejectionReason) {
      return res.status(400).json({ error: 'Rejection reason is required' });
    }

    const picture = await prisma.picture.update({
      where: { id: parseInt(req.params.id) },
      data: {
        status: 'REJECTED',
        approvedById: req.user.id,
        approvedAt: new Date(),
        rejectionReason,
      },
    });

    res.json({
      message: 'Picture rejected',
      picture,
    });
  } catch (error) {
    console.error('Reject picture error:', error);
    res.status(500).json({ error: 'Failed to reject picture' });
  }
});

// DELETE /api/pictures/:id - Delete picture (owner or admin)
router.delete('/:id', authenticate, async (req, res) => {
  try {
    const picture = await prisma.picture.findUnique({
      where: { id: parseInt(req.params.id) },
    });

    if (!picture) {
      return res.status(404).json({ error: 'Picture not found' });
    }

    // Only owner or admin can delete
    if (picture.uploadedById !== req.user.id && req.user.role !== 'ADMIN') {
      return res.status(403).json({ error: 'Insufficient permissions' });
    }

    await prisma.picture.delete({
      where: { id: parseInt(req.params.id) },
    });

    // TODO: Delete file from filesystem

    res.json({ message: 'Picture deleted successfully' });
  } catch (error) {
    console.error('Delete picture error:', error);
    res.status(500).json({ error: 'Failed to delete picture' });
  }
});

export default router;
