# Backend Docker Environment Configuration
# Copy this to .env when running backend in Docker
# For development, use .env with localhost connection

# Database - Uses Docker service name 'nodus_postgres'
DATABASE_URL=postgresql://nodus_user:nodus_password@nodus_postgres:5432/nodus_db?schema=public

# Server
PORT=3001
NODE_ENV=production

# Backend exposed port (Docker host)
BACKEND_PORT=5020

# CORS - Update with your production frontend URL
CLIENT_URL=http://localhost:5173

# JWT Authentication - CHANGE THESE IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
